; -----PWM DUTY CYCLE-----------------------------------------------------------
; PWM0: 0%
; PWM1: 45%
; PWM2: 55%
; PWM3: 65%
; PWM4: 75%
; PWM5: 85%
; PWM6: 95%
; ------------------------------------------------------------------------------
PWM0            EQU H'00'
PWM1            EQU H'01'
PWM2            EQU H'02'
PWM3            EQU H'03'
PWM4            EQU H'04'
PWM5            EQU H'05'
PWM6            EQU H'06'

; ------------------------------------------------------------------------------
; PWM Duty Cycle Values
; ------------------------------------------------------------------------------
; PWM1: 0x00B7 = 0000 0000 1011 0111 >>2 0000 0000 0010 1101 & 11
PWM1H           EQU H'2D'
PWM1L           EQU H'30'
; PWM2: 0x00E0 = 0000 0000 1110 0000 >>2 0000 0000 0011 1000 & 00
PWM2H           EQU H'38'
PWM2L           EQU H'00'
; PWM3: 0x0108 = 0000 0001 0000 1000 >>2 0000 0000 0100 0010 & 00
PWM3H           EQU H'42'
PWM3L           EQU H'00'
; PWM4: 0x0131 = 0000 0001 0011 0001 >>2 0000 0000 0100 1100 & 01
PWM4H           EQU H'4C'
PWM4L           EQU H'10'
; PWM5: 0x015A = 0000 0001 0101 1010 >>2 0000 0000 0101 0110 & 10
PWM5H           EQU H'56'
PWM5L           EQU H'20'
; PWM6: 0x0183 = 0000 0001 1000 0011 >>2 0000 0000 0110 0000 & 11
PWM6H           EQU H'60'
PWM6L           EQU H'30'
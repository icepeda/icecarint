PWMCMDOK        EQU H'00'
PWMCMDERR       EQU H'FF'

; -----PWM DUTY CYCLE-----------------------------------------------------------
; PWM0: 0%
; PWM1: 10%
; PWM2: 25%
; PWM3: 40%
; PWM4: 55%
; PWM5: 75%
; PWM6: 95%
; ------------------------------------------------------------------------------
PWM0            EQU H'00'
PWM1            EQU H'01'
PWM2            EQU H'02'
PWM3            EQU H'03'
PWM4            EQU H'04'
PWM5            EQU H'05'
PWM6            EQU H'06'

; ------------------------------------------------------------------------------
; PWM Duty Cycle Values
; ------------------------------------------------------------------------------
; PWM1: 0x0028 = 0000 0000 0010 1000 >>2 0000 0000 0000 1010 & 00
PWM1H           EQU H'0A'
PWM1L           EQU H'00'
; PWM2: 0x0066 = 0000 0000 0110 0110 >>2 0000 0000 0001 1001 & 10
PWM2H           EQU H'19'
PWM2L           EQU H'20'
; PWM3: 0x00A3 = 0000 0000 1010 0011 >>2 0000 0000 0010 1000 & 11
PWM3H           EQU H'28'
PWM3L           EQU H'30'
; PWM4: 0x00E0 = 0000 0000 1110 0000 >>2 0000 0000 0011 1000 & 00
PWM4H           EQU H'38'
PWM4L           EQU H'00'
; PWM5: 0x0132 = 0000 0001 0011 0010 >>2 0000 0000 0100 1100 & 10
PWM5H           EQU H'4C'
PWM5L           EQU H'20'
; PWM6: 0x0183 = 0000 0001 1000 0011 >>2 0000 0000 0110 0000 & 11
PWM6H           EQU H'60'
PWM6L           EQU H'30'